<% case @position %>
<% when :top %>
  <div
    data-controller="tooltip--tooltip-component"
    class='hidden absolute -top-3 left-1/2 transform -translate-x-1/2 -translate-y-full group-hover:flex cursor-default text-white text-[8px] leading-normal rounded-sm bg-slate-400'>
    <%= content %> 
    <div class="absolute -z-10 bottom-0 left-1/2 transform -translate-x-1/2 translate-y-1/2 rotate-45 w-3 h-3 bg-slate-400"></div>
  </div>
<% when :bottom %>
  <div
    data-controller="tooltip--tooltip-component"
    class='hidden absolute -bottom-3 left-1/2 transform -translate-x-1/2 translate-y-full group-hover:flex cursor-default text-white text-[8px] leading-normal rounded-sm bg-slate-400'>
    <%= content %> 
    <div class="absolute -z-10 top-0 left-1/2 transform -translate-x-1/2 -translate-y-1/2 rotate-45 w-3 h-3 bg-slate-400"></div>
  </div>
<% when :right %>
  <div
    data-controller="tooltip--tooltip-component"
    class='hidden w-40 absolute top-1/2 -right-3 transform translate-x-full -translate-y-1/2 group-hover:flex cursor-default text-white text-[8px] leading-normal rounded-sm bg-slate-400'>
    <%= content %> 
    <div class="absolute -z-10 top-1/2 left-0 transform -translate-x-1/2 -translate-y-1/2 rotate-45 w-3 h-3 bg-slate-400"></div>
  </div>
<% when :left %>
  <div
    data-controller="tooltip--tooltip-component"
    class='hidden w-40 absolute top-1/2 -left-3 transform -translate-x-full -translate-y-1/2 group-hover:flex cursor-default text-white text-[8px] leading-normal rounded-sm bg-slate-400'>
    <%= content %> 
    <div class="absolute -z-10 top-1/2 -right-3 transform -translate-x-1/2 -translate-y-1/2 rotate-45 w-3 h-3 bg-slate-400"></div>
  </div>
<% end %>