<div data-controller="alert--dark-component" class="flex flex-row justify-between p-4 text-sm text-gray-800 rounded-lg bg-gray-50 dark:bg-gray-800 dark:text-gray-300" role="alert">
  <% if content? %>
    <%= content %>
  <% else %>
    <div><%= @label %></div>
    <%= render(Button::CloseComponent.new) if @closable %>
  <% end %>
</div>