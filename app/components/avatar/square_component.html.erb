<div data-controller="avatar--square-component" class="relative">
  <% if @src %>
    <img class="w-10 h-10 rounded" src="<%= @src %>" alt="Default avatar">
  <% else %>
    <div class="relative w-10 h-10 overflow-hidden bg-gray-100 rounded dark:bg-gray-600">
      <svg class="absolute w-12 h-12 text-gray-400 -left-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path></svg>
    </div>
  <% end %>
  <% case @status %>
  <% when :online %>
    <span class="top-0 left-7 absolute  w-3.5 h-3.5 bg-green-400 border-2 border-white dark:border-gray-800 rounded-full"></span>
  <% when :offline %>
    <span class="top-0 left-7 absolute  w-3.5 h-3.5 bg-red-400 border-2 border-white dark:border-gray-800 rounded-full"></span>
  <% else %>
  <% end %>
</div>
