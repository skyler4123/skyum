<div id="<%= dom_id gift_card %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Qr code:</strong>
    <%= gift_card.qr_code %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Shop:</strong>
    <%= gift_card.shop_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= gift_card.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= gift_card.amount %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Used at:</strong>
    <%= gift_card.used_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Expire at:</strong>
    <%= gift_card.expire_at %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this gift card", gift_card, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this gift card', edit_gift_card_path(gift_card), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
