<div id="<%= dom_id payment %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Total amount:</strong>
    <%= payment.total_amount %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Gift card:</strong>
    <%= payment.gift_card_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Remain amount:</strong>
    <%= payment.remain_amount %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Order:</strong>
    <%= payment.order_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= payment.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Is cod payment:</strong>
    <%= payment.is_cod_payment %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Payment partner:</strong>
    <%= payment.payment_partner_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this payment", payment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this payment', edit_payment_path(payment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
