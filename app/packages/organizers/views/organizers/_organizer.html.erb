<div id="<%= dom_id organizer %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">ID:</strong>
    <%= organizer.id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this organizer", organizer, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this organizer', edit_organizer_path(organizer), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
