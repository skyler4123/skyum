<div id="<%= dom_id branch %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= branch.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Established:</strong>
    <%= branch.established %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Nationality:</strong>
    <%= branch.nationality %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Is global company:</strong>
    <%= branch.is_global_company %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= branch.status %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this branch", branch, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this branch', edit_branch_path(branch), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
