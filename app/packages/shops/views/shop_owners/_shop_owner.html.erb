<div id="<%= dom_id shop_owner %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">User:</strong>
    <%= shop_owner.user_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this shop owner", shop_owner, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this shop owner', edit_shop_owner_path(shop_owner), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
