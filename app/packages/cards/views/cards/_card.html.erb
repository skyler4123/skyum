<div id="<%= dom_id card %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Qr code:</strong>
    <%= card.qr_code %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Branch:</strong>
    <%= card.branch_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= card.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Amount:</strong>
    <%= card.amount %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Used at:</strong>
    <%= card.used_at %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Expire at:</strong>
    <%= card.expire_at %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this card", card, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this card', edit_card_path(card), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
