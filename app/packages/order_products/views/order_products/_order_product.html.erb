<div id="<%= dom_id order_product %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Order:</strong>
    <%= order_product.order_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Product:</strong>
    <%= order_product.product_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Status:</strong>
    <%= order_product.status %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Unit price:</strong>
    <%= order_product.unit_price %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= order_product.quantity %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this order product", order_product, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this order product', edit_order_product_path(order_product), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
